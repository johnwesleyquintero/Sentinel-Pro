<Page x:Class="SentinelPro.Views.BackupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Backups" Loaded="BackupsPage_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Backup Management" 
                       FontSize="32" 
                       FontWeight="SemiBold" 
                       Foreground="White"/>
            <TextBlock Text="View and restore your workspace backups" 
                       FontSize="16" 
                       Foreground="#6E6E6E" 
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Backup List -->
        <ListView x:Name="BackupsList" Grid.Row="1" Background="#2D2D30">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Backup ID" Width="200" DisplayMemberBinding="{Binding Timestamp}"/>
                    <GridViewColumn Header="Original Path" Width="400" DisplayMemberBinding="{Binding OriginalPath}"/>
                    <GridViewColumn Header="Action" Width="150" DisplayMemberBinding="{Binding Action}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,20,0,0" 
                    HorizontalAlignment="Left">
            <Button x:Name="RestoreButton" 
                    Content="Restore Selected" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Margin="0,0,10,0"/>
            <Button x:Name="RefreshButton" 
                    Content="Refresh List"/>
        </StackPanel>
    </Grid>
</Page>