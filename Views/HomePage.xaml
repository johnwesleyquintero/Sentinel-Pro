<Page x:Class="WorkspaceCleanup.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Welcome to C# Design Pro" 
                       FontSize="32" 
                       FontWeight="SemiBold" 
                       Foreground="White"/>
            <TextBlock Text="Your all-in-one workspace management solution" 
                       FontSize="16" 
                       Foreground="#6E6E6E" 
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Quick Actions Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Backup Management Card -->
            <Border Grid.Column="0" Grid.Row="0" 
                    Background="#2D2D30" 
                    Margin="0,0,10,10" 
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="📁 Backup Management" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="Manage and restore your workspace backups" 
                               Foreground="#6E6E6E" 
                               Margin="0,10,0,0"/>
                    <Button Content="View Backups" 
                            Margin="0,20,0,0" 
                            Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- AI Assistant Card -->
            <Border Grid.Column="1" Grid.Row="0" 
                    Background="#2D2D30" 
                    Margin="10,0,0,10" 
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="🤖 AI Assistant" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="Coming soon - Local LLM powered assistant" 
                               Foreground="#6E6E6E" 
                               Margin="0,10,0,0"/>
                    <Button Content="Coming Soon" 
                            Margin="0,20,0,0" 
                            IsEnabled="False"/>
                </StackPanel>
            </Border>

            <!-- Project Management Card -->
            <Border Grid.Column="0" Grid.Row="1" 
                    Background="#2D2D30" 
                    Margin="0,10,10,0" 
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="📋 Project Management" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="Coming soon - Manage your development projects" 
                               Foreground="#6E6E6E" 
                               Margin="0,10,0,0"/>
                    <Button Content="Coming Soon" 
                            Margin="0,20,0,0" 
                            IsEnabled="False"/>
                </StackPanel>
            </Border>

            <!-- PC Management Card -->
            <Border Grid.Column="1" Grid.Row="1" 
                    Background="#2D2D30" 
                    Margin="10,10,0,0" 
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="⚙️ PC Management" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="Coming soon - Monitor and manage your PC" 
                               Foreground="#6E6E6E" 
                               Margin="0,10,0,0"/>
                    <Button Content="Coming Soon" 
                            Margin="0,20,0,0" 
                            IsEnabled="False"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>