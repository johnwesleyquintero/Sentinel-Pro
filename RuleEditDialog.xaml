<Window x:Class="WorkspaceCleanup.RuleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Edit Rule" Height="300" Width="400"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Label Content="Path:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="PathTextBox" Grid.Column="0" Margin="0,0,6,0"/>
                <Button Content="Browse" Grid.Column="1" Click="BrowsePath_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <Label Content="Pattern:"/>
            <TextBox x:Name="PatternTextBox"/>
        </StackPanel>

        <CheckBox x:Name="IncludeSubdirectoriesCheckBox" Grid.Row="2" 
                  Content="Include Subdirectories" 
                  IsChecked="True" 
                  Margin="0,0,0,12"/>

        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <Label Content="Action:"/>
            <ComboBox x:Name="ActionComboBox">
                <ComboBoxItem Content="Backup"/>
                <ComboBoxItem Content="Delete"/>
                <ComboBoxItem Content="Ignore"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveRule_Click" Style="{StaticResource AccentButtonStyle}" Margin="0,0,6,0"/>
            <Button Content="Cancel" Click="CancelRule_Click"/>
        </StackPanel>
    </Grid>
</Window>