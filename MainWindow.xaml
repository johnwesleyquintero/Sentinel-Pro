<Window x:Class="SentinelPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="C# Design Pro" Height="600" Width="1000"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="#1E1E1E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Grid Grid.Column="0" Background="#252526">
            <StackPanel>
                <TextBlock Text="C# Design Pro" 
                           Margin="20,20,0,20"
                           FontSize="24"
                           Foreground="White"/>
                <TextBlock Text="Design the Interface"
                           Margin="20,0,0,30"
                           Foreground="#6E6E6E"
                           FontSize="14"/>

                <!-- Navigation Items -->
                <RadioButton Style="{StaticResource NavigationButtonStyle}" 
                             Content="Home"
                             Tag="🏠"
                             IsChecked="True"/>
                <RadioButton Style="{StaticResource NavigationButtonStyle}" 
                             Content="Projects"
                             Tag="📋"
                             IsEnabled="False"/>
                <RadioButton Style="{StaticResource NavigationButtonStyle}" 
                             Content="AI Assistant"
                             Tag="🤖"
                             IsEnabled="False"/>
                <RadioButton Style="{StaticResource NavigationButtonStyle}" 
                             Content="PC Management"
                             Tag="⚙️"
                             IsEnabled="False"/>
                <RadioButton Style="{StaticResource NavigationButtonStyle}" 
                             Content="Settings"
                             Tag="⚙️"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Content Header -->
            <TextBlock Text="Welcome Back!"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <!-- Content Area -->
            <Frame x:Name="ContentFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Height="50" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"/>
                            <Border x:Name="SelectionIndicator"
                                    Width="3"
                                    HorizontalAlignment="Left"
                                    Background="#00A6ED"
                                    Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="SelectionIndicator" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>
</Window>