<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Primary Colors -->
    <Color x:Key="ShieldBlueColor">#00E1FF</Color>
    <Color x:Key="ShieldBlueHoverColor">#33E7FF</Color>
    <Color x:Key="ShieldBlueActiveColor">#00B4CC</Color>
    <Color x:Key="DeepBlueColor">#0097B2</Color>
    <Color x:Key="DeepBlueHoverColor">#00A8C7</Color>
    <Color x:Key="DeepBlueActiveColor">#007A8F</Color>
    <Color x:Key="DarkBackgroundColor">#1E1E1E</Color>
    <Color x:Key="LightBackgroundColor">#F5F5F5</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SuccessGreenColor">#00CF7F</Color>
    <Color x:Key="SuccessGreenHoverColor">#00E68F</Color>
    <Color x:Key="SuccessGreenActiveColor">#00B36E</Color>
    <Color x:Key="WarningYellowColor">#FFB800</Color>
    <Color x:Key="WarningYellowHoverColor">#FFC633</Color>
    <Color x:Key="WarningYellowActiveColor">#CC9300</Color>
    <Color x:Key="ErrorRedColor">#FF4747</Color>
    <Color x:Key="ErrorRedHoverColor">#FF6B6B</Color>
    <Color x:Key="ErrorRedActiveColor">#CC3939</Color>
    <Color x:Key="InfoBlueColor">#3E8EFF</Color>
    <Color x:Key="InfoBlueHoverColor">#66A5FF</Color>
    <Color x:Key="InfoBlueActiveColor">#3271CC</Color>

    <!-- Neutral Colors -->
    <Color x:Key="Gray100Color">#F5F5F5</Color>
    <Color x:Key="Gray200Color">#E5E5E5</Color>
    <Color x:Key="Gray300Color">#D4D4D4</Color>
    <Color x:Key="Gray400Color">#A3A3A3</Color>
    <Color x:Key="Gray500Color">#737373</Color>
    <Color x:Key="Gray600Color">#525252</Color>
    <Color x:Key="Gray700Color">#404040</Color>
    <Color x:Key="Gray800Color">#262626</Color>
    <Color x:Key="Gray900Color">#171717</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ShieldBlueBrush" Color="{StaticResource ShieldBlueColor}"/>
    <SolidColorBrush x:Key="DeepBlueBrush" Color="{StaticResource DeepBlueColor}"/>
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="WarningYellowBrush" Color="{StaticResource WarningYellowColor}"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRedColor}"/>
    <SolidColorBrush x:Key="InfoBlueBrush" Color="{StaticResource InfoBlueColor}"/>
</ResourceDictionary>