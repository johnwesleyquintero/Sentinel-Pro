<Window x:Class="SentinelPro.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Settings" Height="450" Width="600"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Label Content="Default Workspace Path:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="DefaultWorkspacePathTextBox" Grid.Column="0" Margin="0,0,6,0"/>
                <Button Content="Browse" Grid.Column="1" Click="BrowseDefaultWorkspace_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <Label Content="Backup Directory:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="BackupDirectoryTextBox" Grid.Column="0" Margin="0,0,6,0"/>
                <Button Content="Browse" Grid.Column="1" Click="BrowseBackupDirectory_Click"/>
            </Grid>
        </StackPanel>

        <GroupBox Header="Workspace Rules" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView x:Name="RulesListView" Grid.Row="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Path" Width="200" DisplayMemberBinding="{Binding Path}"/>
                            <GridViewColumn Header="Pattern" Width="100" DisplayMemberBinding="{Binding Pattern}"/>
                            <GridViewColumn Header="Include Subdirs" Width="100" DisplayMemberBinding="{Binding IncludeSubdirectories}"/>
                            <GridViewColumn Header="Action" Width="100" DisplayMemberBinding="{Binding Action}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                    <Button Content="Add Rule" Click="AddRule_Click" Margin="0,0,6,0"/>
                    <Button Content="Edit Rule" Click="EditRule_Click" Margin="0,0,6,0"/>
                    <Button Content="Remove Rule" Click="RemoveRule_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Click="SaveSettings_Click" Style="{StaticResource AccentButtonStyle}" Margin="0,0,6,0"/>
            <Button Content="Cancel" Click="CancelSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>